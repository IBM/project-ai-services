apiVersion: v1
kind: Pod
metadata:
  name: "{{ .AppName }}--opensearch"
  labels:
    ai-services.io/application: "{{ .AppName }}"
    ai-services.io/template: "{{ .AppTemplateName }}"
    ai-services.io/version: "{{ .Version }}"
spec:
  containers:
    - name: opensearch
      image: "{{ .Values.opensearch.image }}"
      env:
        - name: "discovery.type"
          value: "single-node"
        - name: OPENSEARCH_INITIAL_ADMIN_PASSWORD
          value: "AiServices@1234"
        
      ports: 
        - name: os-client-port
          containerPort: 9200
        - name: os-metrics-port
          containerPort: 9600
      resources:
        requests:
          memory: "{{ .Values.opensearch.memoryLimit }}"
        limits:
          memory: "{{ .Values.opensearch.memoryLimit }}"
      volumeMounts:
        - mountPath: /var/lib/opensearch
          name: opensearch-data
      livenessProbe:
        exec:
          command:
          - curl
          - -fk
          - -u
          - admin:AiServices@1234
          - https://localhost:9200/_cluster/health
        initialDelaySeconds: 90
        periodSeconds: 30
        timeoutSeconds: 20
        failureThreshold: 5

  volumes:
    - name: opensearch-data
      hostPath:
        path: "/var/lib/ai-services/applications/{{ .AppName }}/volumes/opensearch"
        type: DirectoryOrCreate
